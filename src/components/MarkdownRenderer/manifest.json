{
  "displayName": "markdown renderer",
  "defaultWidth": 320,
  "defaultHeight": 80,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
    "props": [
      {
        "name": "markdownText",
        "displayName": "Text",
        "type": "text",
        "default": "**This is some fancy shit.**",
        "styles": {
          "fontFamily": "@body",
          "textAlignment": "left"
        }
      },
      {
        "name": "textColor",
        "displayName": "Text Color",
        "type": "color",
        "default": "@primary"
      },
      {
        "name": "fontSize",
        "displayName": "Font Size",
        "type": "number",
        "default": 16,
        "control": { "type": "slider", "max": 48, "min": 12 }
      }
    ]
  }
  